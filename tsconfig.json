{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "out",
        "rootDir": "src",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "./src/**/*"
    ]
}